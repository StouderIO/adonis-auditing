{
  "name": "@stouder-io/adonis-auditing",
  "description": "Audit your Lucid models with ease.",
  "version": "1.0.8",
  "engines": {
    "node": ">=18.16.0"
  },
  "type": "module",
  "files": [
    "build/configure.js",
    "build/configure.d.ts",
    "build/index.js",
    "build/index.d.ts",
    "build/stubs",
    "build/src",
    "!build/src/auditable/factory.js",
    "!build/src/auditable/factory.d.ts",
    "build/services",
    "build/providers"
  ],
  "exports": {
    ".": "./build/index.js",
    "./services/main": "./build/services/auditing.js",
    "./auditing_provider": "./build/providers/auditing_provider.js",
    "./auditable": "./build/src/mixin.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "npm run copy:templates",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "accountability",
    "audit",
    "auditing",
    "changes",
    "lucid",
    "history",
    "log",
    "logging",
    "observer",
    "adonis",
    "adonisjs",
    "record",
    "revision",
    "tracking"
  ],
  "author": "Xavier Stouder <xavier@stouder.io> (https://stouder.io)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/StouderIO/adonis-auditing.git"
  },
  "bugs": {
    "url": "https://github.com/StouderIO/adonis-auditing/issues",
    "email": "project@hostname.com"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/auth": "^9.1.1",
    "@adonisjs/core": "^6.3.1",
    "@adonisjs/eslint-config": "^1.2.2",
    "@adonisjs/lucid": "^20.3.0",
    "@adonisjs/prettier-config": "^1.2.2",
    "@adonisjs/tsconfig": "^1.2.2",
    "@japa/assert": "^2.1.0",
    "@japa/file-system": "^2.2.0",
    "@japa/runner": "^3.1.1",
    "@swc/core": "^1.4.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.24",
    "better-sqlite3": "^9.4.3",
    "c8": "^9.1.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "luxon": "^3.4.4",
    "np": "^10.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@adonisjs/auth": "^9.1.1",
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^20.3.0",
    "luxon": "^3.4.4"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "tests_helpers/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "dependencies": {
    "get-tsconfig": "^4.7.3"
  }
}
